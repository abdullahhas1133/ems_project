<section class="vh-100 gradient-custom">
  <div class="container py-5 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
              <%= form_for [:admin, @coupon] do |f| %>

                <div class="form-outline form-white mb-4">
                  <%= f.label :name, class: "form-label mb-4" %>
                  <%= f.text_field :name, required:true, autofocus: true, autocomplete: "name", class: "form-control form-control-lg"  %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :value, class: "form-label mb-4" %>
                  <%= f.text_field :value, required:true, autofocus: true, autocomplete: "value", class: "form-control form-control-lg"  %>
                </div>

                <div class="dropdown field mb-3">
                  <%= f.label :Select_Coupon, class: "form-label mb-4" %>
                  <%= f.select :products, options_for_select(Product.all.map {|key| [key.title.titleize, key.id]},), {}, multiple: true, class: "mx-2 form-select form-control-lg" %>
                </div>
               
                <div class="actions mb-4 mt-2">
                  <%= f.submit "Create" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
