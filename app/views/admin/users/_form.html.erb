<%= form_for [:admin,@user] do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="field">
    <%= f.label :email, class: "form-label mb-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :user_name, class: "form-label mb-4" %>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, class: "form-label mb-4" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "form-label mb-4" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-label mb-4" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>  
  <%= f.submit %>
<% end %>
