<% if user_signed_in? %>
  <%= link_to "Sign out",  destroy_user_session_path, method: :delete %>
  <hr>
  <%= form_tag admin_users_path, method: :get do %>
    <%= search_field_tag :search, params[:search], placeholder: 'Search by name'%>
    <%= submit_tag "search"%>
  <% end %>
  <% @users.each do |user| %>
    <h3><%= user.user_name %></h3>
    <p><%= user.email %></p> 
    <p><%= user.first_name %></p>
    <p><%= user.last_name %></p>
    <br>
    <%= link_to "Read User |", admin_user_path(user) %>
    <%= link_to "Edit User |", edit_admin_user_path(user) %>
    <%= link_to "Delete Post ", admin_user_path(user), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
<% else %>
  <%= link_to "Log in",  new_user_session_path %>
  <%= link_to "Sign Up",  new_user_registration_path %>  
<% end %>

<hr>
<%= paginate @users %>
