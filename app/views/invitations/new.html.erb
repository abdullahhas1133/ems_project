<section class="vh-100 gradient-custom">
  <div class="container py-5 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">Invite User</h2>
              <%= form_for(@user, url: invitations_path(@user), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: @user %>
                
                <div class="form-outline form-white mb-4">
                  <%= f.label :first_name, class:"form-label" %><br />
                  <%= f.text_field :first_name, autofocus: true,required: true, class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :last_name, class:"form-label" %><br />
                  <%= f.text_field :last_name, autofocus: true,required: true, class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :email, class:"form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,id: "typeEmailX", class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.label :password, class:"form-label" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password",required: true, class: "form-control form-control-lg" %>
                </div>

                <div class="actions">
                  <%= f.submit "Invite" %>
                </div>
                <br>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
