<%= form_for [:user,@order] do |f| %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
