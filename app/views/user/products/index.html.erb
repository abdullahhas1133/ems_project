<div class="container-fluid w-75 border rounded shadow mt-5 mb-5 p-4 bg-light text-dark "> 
  <% if user_signed_in? %>
    <div class='d-flex flex-wrap justify-content-around'>
      <% @products.each do |product| %>
        <div class="row mb-3 mt-3 ">
          <div class="col-md-4">
            <div id="card-width" class="card bg-dark text-light" >
              <%= image_tag product.image, class: 'card-img-top' if product.image.attached? %>
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p>Price: <%= product.price %></p>
                <p class="card-text"><%= product.description %></p>
                <%= link_to "Add to cart", user_order_items_path(product_id: product.id), method: 'POST', class:"btn btn-warning w-100" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div> 
  <% end %>
</div>


 